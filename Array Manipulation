#include<stdio.h>
long a[10000000]={0},b[10000000]={0};
int main()
{
 
  long n,q;
  long z,x,y,i,count=0;
   long maxv=-1;
    scanf("%ld%ld",&n,&q);
  for(i=0;i<q;i++)
  {
   scanf("%ld%ld%ld",&x,&y,&z);
   b[x-1]+=z;
   b[y]-=z;
  }
   
  for(i=0;i<n;i++)
  {
   count+=b[i];
   a[i]=count;
      if(count>maxv) maxv=count;
  }
       printf("%ld\n",maxv);
 return 0;
}




